{
    "name": "aurimarl",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "lint": "turbo run lint",
        "test": "turbo run test",
        "postinstall": "husky install",
        "build": "turbo run build",
        "clean": "turbo run clean",
        "develop": "turbo run develop",
        "production": "turbo run start",
        "dev": "turbo run dev --parallel",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "lint-staged": {
        "apps/**/*.{js,ts,jsx,tsx}": [
            "eslint --fix"
        ],
        "packages/ui/**/*.{js,ts,jsx,tsx}": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "eslint": "^8.28.0",
        "eslint-config-custom": "*",
        "husky": "^8.0.2",
        "lint-staged": "^13.0.4",
        "prettier": "^2.8.0",
        "prettier-plugin-tailwindcss": "^0.1.11",
        "turbo": "1.6.3"
    },
    "dependencies": {
        "bootstrap": "^5.2.3",
        "react-bootstrap": "^2.7.0",
        "react-icons": "^4.7.1"
    }
}
